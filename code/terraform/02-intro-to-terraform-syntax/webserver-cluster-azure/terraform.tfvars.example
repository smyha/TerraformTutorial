# ============================================================================
# Azure Authentication Credentials
# ============================================================================
# Copy this file to terraform.tfvars and fill in your Azure credentials.
# DO NOT commit terraform.tfvars to version control as it contains secrets.

azure_client_id       = "YOUR_CLIENT_ID"
azure_client_secret   = "YOUR_CLIENT_SECRET"
azure_subscription_id = "YOUR_SUBSCRIPTION_ID"
azure_tenant_id       = "YOUR_TENANT_ID"

# ============================================================================
# Infrastructure Configuration
# ============================================================================

resource_group_name = "rg-web-cluster"
location            = "westus2"
environment         = "production"

# ============================================================================
# Network Configuration
# ============================================================================

vnet_address_space          = "10.0.0.0/16"
subnet_address_prefixes     = "10.0.1.0/24"

# ============================================================================
# Virtual Machine Scale Set Configuration
# ============================================================================

vm_size             = "Standard_B2s"   # 2 vCPU, 4 GB RAM
instance_count      = 2                # Minimum instances
max_instance_count  = 5                # Maximum instances for scaling
